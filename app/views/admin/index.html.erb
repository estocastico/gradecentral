<h1>Users</h1>
<table>
  <thead>
    <thead>
      <tr>
        <th>Email</th>
        <th>Role</th>
      </tr>
    </thead>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.roles.first.name %></td>
      <td>
      <%= button_to "Make Teacher", { controller: "admin",action: "update", id: user.id.to_s, role: :teacher }, method: :put %>

      </td>
    </tr>
  <% end %>
  </tbody>
</table>